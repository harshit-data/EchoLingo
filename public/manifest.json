{
    "manifest_version": 3,
    "name": "EchoLingo",
    "version": "1.0.0",
    "description": "A simple translator extension",
    "permissions": [
      "activeTab",
      "contextMenus",
      "storage"
    ],
    "host_permissions":[
        "http://*/",
        "https://*/"
    ],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "index.html"
    }
}